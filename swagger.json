    "signin": {
      "type": "object",
      "title": "Signin request body specification",
      "required": [
        "email",
        "password"
      ],
      "properties": {
        "email": {
          "description": "User email",
          "type": "string"
        },
        "password": {
          "description": "User password",
          "type": "string"
        }
      },
      "example": {
