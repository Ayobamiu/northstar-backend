  "paths": {
    "/auth/signup": {
      "post": {
        "description": "User Sign Up",
        "summary": "Registers a user with all required information",
        "tags": [
          "Auth"
        ],
        "produces": [
          "application/json"
        ],
        "security": [],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "description": "This is the request body object containing user  basic information",
            "schema": {
              "$ref": "#/requestBody/signup"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Success"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/auth/signin": {
      "post": {
        "description": "A user can sign in",
        "summary": "This endpoint receives POST request sign in a user",
        "tags": [
          "Auth"
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "security": [],
        "parameters": [
          {
            "in": "body",
            "required": true,
            "description": "The request body for the signin endpoint",
            "schema": {
              "$ref": "#/requestBody/signin"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "requestBody": {
    "signup": {
      "title": "Signup Request",
      "type": "object",
